char encryprot (char *input, int k, long int stringlength) //encrypt function name (array)
   {
       char[i];
       int k; //rotating key
       int i = 0; //counter
       
       printf("Input is %lu chars long\n", stinglength); //test
       
       for (i = 0; i < stringlength; i++) //user will press a letter, computer will count
           {
           //convert if lower case to upper case
            if (input[i]) > 96 && input[i]<123){
                printf("input is LC: %c\n", input[i]); //test
                input[i]=input[i]-32; //converts to upper case ascii
                printf("converted to UC: %c\n", input[i]);
                }
                        
            if (input[i] > 64 && input[i]< 91){
                printf("Encrypting: %c, %d\n", input[i], input[i]);
                input[i] = ((((int)input[i])+ k)-65)%26; //encryption equation
                input[i]+= 65;
                printf("Encryption value is: %c\n", input[i]);
                }
                
return 0;
            }
       
       
   
       
   }
